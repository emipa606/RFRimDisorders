<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <MentalStateDef ParentName="BaseMentalState">
    <defName>SuicideAttempt</defName>
    <stateClass>RimDisorders.MentalState_SuicideAttempt</stateClass>
    <label>attempting suicide</label>
    <category>Misc</category>
    <blockNormalThoughts>true</blockNormalThoughts>
    <nameColor>(0.65, 0.9, 0.93)</nameColor>
    <minTicksBeforeRecovery>100</minTicksBeforeRecovery>
    <recoveryMtbDays>0.3</recoveryMtbDays>
    <maxTicksBeforeRecovery>1000</maxTicksBeforeRecovery>
    <recoveryMessage>{0} is no longer attempting suicide.</recoveryMessage>
    <recoverFromSleep>true</recoverFromSleep>
    <beginLetterLabel>suicide attempt</beginLetterLabel>
    <beginLetter>{0} is attempting suicide!</beginLetter>
    <beginLetterDef>NegativeEvent</beginLetterDef>
    <baseInspectLine>Mental state: Attempting Suicide!</baseInspectLine>
    <tale>MentalStateGaveUp</tale>
    <unspawnedCanDo>false</unspawnedCanDo>
  </MentalStateDef>
