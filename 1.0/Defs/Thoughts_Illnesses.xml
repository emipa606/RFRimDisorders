<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThoughtDef>
    <defName>MajorDepressionThought</defName>
    <thoughtClass>Thought_Situational</thoughtClass>
    <workerClass>RimDisorders.ThoughtWorker_MajorDepressionThought</workerClass>
    <stages>
      <li>
        <label>mild depression</label>
        <description>It's hard to say anything good about life right now.</description>
        <baseMoodEffect>-5</baseMoodEffect>
      </li>
      <li>
        <label>moderate depression</label>
        <description>I don't know if I can wake up to this again.</description>
        <baseMoodEffect>-10</baseMoodEffect>
      </li>
      <li>
        <label>severe depression</label>
        <description>I can't think. I can't feel. What's the point of carrying on?</description>
        <baseMoodEffect>-20</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  <ThoughtDef>
    <defName>GeneralizedAnxietyThought</defName>
    <thoughtClass>Thought_Situational</thoughtClass>
    <workerClass>RimDisorders.ThoughtWorker_GeneralizedAnxietyThought</workerClass>
    <stages>
      <li>
        <label>mild anxiety</label>
        <description>I keep thinking something bad's going to happen.</description>
        <baseMoodEffect>-3</baseMoodEffect>
      </li>
      <li>
        <label>moderate anxiety</label>
        <description>I'm sure something awful is coming.</description>
        <baseMoodEffect>-6</baseMoodEffect>
      </li>
      <li>
        <label>severe anxiety</label>
        <description>I feel paralyzed by visions of catastrophe!</description>
        <baseMoodEffect>-12</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  <ThoughtDef>
    <defName>COCDThought</defName>
    <thoughtClass>Thought_Situational</thoughtClass>
    <workerClass>RimDisorders.ThoughtWorker_COCDThought</workerClass>
    <stages>
      <li>
        <label>mild cOCD</label>
        <description>I'm distracted by the dirt.</description>
        <baseMoodEffect>-3</baseMoodEffect>
      </li>
      <li>
        <label>moderate cOCD</label>
        <description>It's disgusting here. I can't stop thinking about it.</description>
        <baseMoodEffect>-6</baseMoodEffect>
      </li>
      <li>
        <label>severe cOCD</label>
        <description>It's horrible! I have to get clean!</description>
        <baseMoodEffect>-12</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  <ThoughtDef>
    <defName>CounseledThought</defName>
    <thoughtClass>Thought_Situational</thoughtClass>
    <workerClass>RimDisorders.ThoughtWorker_CounseledThought</workerClass>
    <stages>
      <li>
        <label>Counseled</label>
        <description>I've learned a lot recently in counseling.</description>
        <baseMoodEffect>5</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  <ThoughtDef>
    <defName>AutismCrowdedThought</defName>
    <thoughtClass>Thought_Situational</thoughtClass>
    <workerClass>RimDisorders.ThoughtWorker_AutismCrowded</workerClass>
    <stages>
      <li>
        <label>Uncomfortable crowd</label>
        <description>This many people at once is a bit overwhelming.</description>
        <baseMoodEffect>-5</baseMoodEffect>
      </li>
      <li>
        <label>Overwhelming crowd</label>
        <description>I don't want all this bustle to cause a meltdown.</description>
        <baseMoodEffect>-10</baseMoodEffect>
      </li>
      <li>
        <label>Totally overwhelming crowd</label>
        <description>I can't handle all this input!</description>
        <baseMoodEffect>-20</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  <ThoughtDef>
    <defName>AutismForcedWork</defName>
    <thoughtClass>Thought_Memory</thoughtClass>
    <showBubble>true</showBubble>
    <icon>Things/Mote/SpeechSymbols/Insult</icon>
    <durationDays>1.0</durationDays>
    <stackedEffectMultiplier>0.25</stackedEffectMultiplier>
    <stackLimit>1</stackLimit>
    <stages>
      <li>
        <label>told to prioritize work</label>
        <description>The order I was made to do my work in makes no sense!</description>
        <baseMoodEffect>-5</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  <ThoughtDef>
    <defName>AutismForcedWorkSevere</defName>
    <thoughtClass>Thought_Memory</thoughtClass>
    <showBubble>true</showBubble>
    <icon>Things/Mote/SpeechSymbols/Insult</icon>
    <durationDays>1.0</durationDays>
    <stackedEffectMultiplier>0.25</stackedEffectMultiplier>
    <stackLimit>1</stackLimit>
    <stages>
      <li>
        <label>told to prioritize work</label>
        <description>I was made to do jobs in all the wrong order. I hate it.</description>
        <baseMoodEffect>-10</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
</Defs>
